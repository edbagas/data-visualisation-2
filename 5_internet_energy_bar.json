{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/edbagas/data-visualisation-2/main/data/internet_energy.csv"
  },
  "transform": [
    {
      "calculate": "datum.nonrenewable_energy",
      "as": "other_energy"
    },
    {
      "fold": [
        "hydro_energy",
        "biofuel_energy",
        "solar_energy",
        "geothermal_energy",
        "other_energy"
      ]
    },
    {
      "filter": "continent_selection == null || datum.continent == continent_selection"
    }
  ],
  "params": [
    {
      "name": "energy_highlight",
      "select": { "type": "point", "fields": ["key"] },
      "bind": "legend"
    },
    {
      "name": "continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "country",
      "type": "nominal",
      "title": "Country (Sorted by Internet Usage Rate)",
      "sort": { "field": "internetuserate", "order": "descending" }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Total Energy (TWh)"
    },
    "color": {
      "field": "key",
      "type": "nominal",
      "scale": {
        "domain": [
          "hydro_energy",
          "biofuel_energy",
          "solar_energy",
          "geothermal_energy",
          "other_energy"
        ]
      },
      "title": "Energy Type"
    },
    "opacity": {
      "condition": { "param": "energy_highlight", "value": 1 },
      "value": 0.2
    },
    "tooltip": [
      { "field": "country", "title": "Country", "type": "nominal" },
      {
        "field": "internetuserate",
        "title": "Internet Users (per 100 people)",
        "type": "quantitative",
        "format": ","
      },
      {
        "field": "total_energy",
        "title": "Total Energy (TWh)",
        "type": "quantitative",
        "format": ","
      },
      {
        "field": "hydro_energy",
        "title": "Hydro Energy (TWh)",
        "type": "quantitative",
        "format": ","
      },
      {
        "field": "biofuel_energy",
        "title": "Biofuel Energy (TWh)",
        "type": "quantitative",
        "format": ","
      },
      {
        "field": "solar_energy",
        "title": "Solar Energy (TWh)",
        "type": "quantitative",
        "format": ","
      },
      {
        "field": "geothermal_energy",
        "title": "Geothermal Energy (TWh)",
        "type": "quantitative",
        "format": ","
      },
      {
        "field": "other_energy",
        "title": "Other Energy (TWh)",
        "type": "quantitative",
        "format": ","
      }
    ]
  }
}
